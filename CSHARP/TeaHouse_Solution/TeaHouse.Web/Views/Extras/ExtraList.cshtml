@model IEnumerable<TeaHouse.Web.Models.Extra>

<h2>List of extras</h2>

@if (Model.Count() == 0)
{
    <p>Database is empty.</p>
}
else
{
    <table border="1">
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Category)</th>
            <th>@Html.DisplayNameFor(m => m.First().ExtraName)</th>
            <th>Datasheet</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Category)</td>
                <td>@Html.DisplayFor(m => item.ExtraName)</td>
                <td>@Html.ActionLink("[SHOW]", "Details", new { id = item.Id })</td>
                <td>@Html.ActionLink("[DEL]", "Remove", new { id = item.Id })</td>
                <td>@Html.ActionLink("[EDIT]", "Edit", new { id = item.Id })</td>
            </tr>
        }
    </table>
}